<% form_for [${@project}, ${@task}] do |${f}| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.check_box :complete %>
    <%= f.label :complete %>
  </p>
  <p><%= f.submit "Submit" %></p>
<% end %>
